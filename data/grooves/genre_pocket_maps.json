  "pocket_depth_definitions": {
    "grid": "Exactly on the beat, machine-like",
    "pushed": "Slightly ahead of the beat, creates urgency",
    "moderate": "Natural feel, slight variations",
    "deep": "Laid back, behind the beat",
    "very_deep": "Significantly behind, heavy pocket",
    "syncopated": "Off-beat emphasis, clave-based",
    "inconsistent": "Intentionally variable, lo-fi aesthetic",
    "flexible": "Changes with emotional content"
